FROM gizra/drupal-lamp

ADD . /var/www/html/<project_name>
WORKDIR /var/www/html/<project_name>

# Add a bash script to finalize all
COPY docker_files/run.sh /var/www/html/<project_name>/docker_files/run.sh
RUN chmod +x /var/www/html/<project_name>/docker_files/run.sh
ENTRYPOINT ["/var/www/html/<project_name>/docker_files/run.sh"]

EXPOSE 80 3306 22
