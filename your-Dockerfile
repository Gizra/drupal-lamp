FROM nirgn975/gizra-lamp

ADD . /var/www/html/esaro
WORKDIR /var/www/html/esaro

# Add a bash script to finalize all
COPY docker_files/run.sh /var/www/html/esaro/docker_files/run.sh
RUN chmod +x /var/www/html/esaro/docker_files/run.sh
ENTRYPOINT ["/var/www/html/esaro/docker_files/run.sh"]

EXPOSE 80 3306 22
